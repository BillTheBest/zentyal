#!/bin/bash

set -e

#DEBHELPER#

case "$1" in
    configure)
    # Migrate data if needed
    /usr/share/zentyal-core/ebox-migrate /usr/share/ebox-dns/migration/

    /usr/share/zentyal-core/ebox-sql-table add dns_domains /usr/share/zentyal-core/sqllog/dns_domains.sql
    /usr/share/zentyal-core/ebox-sql-table add dns_domains_report /usr/share/zentyal-core/sqllog/dns_domains_report.sql

    invoke-rc.d zentyal dns restart

    dpkg-trigger --no-await zentyal-core
esac

exit 0
