use warnings;
use strict;

use EBox;
use EBox::Global;
use Error qw(:try);

EBox::init();
$SIG{PIPE} = 'IGNORE';

print "Adding quota objectclasses...\n";

my $users = EBox::Global->modInstance('users');

exit unless defined($users);
exit unless $users->isEnabled();
exit if ($users->mode() eq 'slave');

addSystemQuotasTree($users->ldap(), $users->usersDn());

sub addSystemQuotas
{
    my ($ldap, $dn) = @_;

    my %attrs = (
            base   => $dn,
            filter => "(objectclass=*)",
            attrs  => [ 'objectClass'],
            scope  => 'base'
            );

    my $result = $ldap->ldapCon->search(%attrs);
    my $classes = [ $result->pop_entry()->get_value('objectClass'), 'systemQuotas' ];

    $ldap->modify($dn,
        { 'changes' => [ 'replace' => [ 'objectClass' => $classes ] ]} );
}

sub addSystemQuotasTree
{
    my ($ldap, $dn) = @_;

    my %attrs = (
            base   => $dn,
            filter => "(uid=*)",
            attrs  => [ 'objectClass'],
            scope  => 'sub'
    );
    my $result = $ldap->ldapCon->search(%attrs);
    for my $entry ($result->entries()) {
        addSystemQuotas($ldap, $entry->dn());
    }
}



