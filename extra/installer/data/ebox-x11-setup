#!/bin/sh

#USER_NAME=$1
USER_NAME=eboxadmin
DIR=/home/$USER_NAME

sed -i "s/#auto_login.*/auto_login\tyes/" /etc/slim.conf
sed -i "s/#default_user.*/default_user\t$USER_NAME/" /etc/slim.conf

cp /tmp/ebox/ebox-xsession $DIR/.xsession
chmod +x $DIR/.xsession
#FIXME: eboxadmin group??
chown $USER_NAME:eboxadmin $DIR/.xsession

mkdir $DIR/.mozilla
cp -r /tmp/ebox/ebox-firefox-profile $DIR/.mozilla/firefox
cp /tmp/ebox/ebox-blackbox-menu /etc/X11/blackbox/blackbox-menu
chown -R $USER_NAME:eboxadmin $DIR/.mozilla
chmod -R +w $DIR/.mozilla

cp /tmp/ebox/ebox-cert-override $DIR/
chown $USER_NAME: $DIR/ebox-cert-override
