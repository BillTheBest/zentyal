#!/bin/bash

if [ "$1" = "purge" ]; then
        # Purge configuration
        /usr/share/zentyal/clean-conf ids || true
fi

case "$1" in
	remove)
        dpkg-trigger --no-await zentyal-core
        ;;

    purge)
        /usr/share/zentyal/ebox-sql-table drop ids || true
		/usr/share/zentyal/ebox-sql-table-with-time-period drop ids_alert || true
        ;;
esac
