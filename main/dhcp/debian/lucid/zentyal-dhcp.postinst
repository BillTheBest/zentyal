#!/bin/bash

set -e

#DEBHELPER#

case "$1" in
    configure)
        # create log table
        /usr/share/zentyal-core/ebox-sql-table add leases /usr/share/zentyal-core/sqllog/dhcp.sql || true

        # restart logs
        invoke-rc.d zentyal logs restart || true

        # Migrate data if needed
        /usr/share/zentyal-core/ebox-migrate /usr/share/ebox-dhcp/migration/ || true

        # Restart dhcp module
        invoke-rc.d zentyal dhcp restart || true

        dpkg-trigger --no-await zentyal-core
    esac



exit 0
