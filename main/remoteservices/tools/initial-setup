#!/bin/bash

VERSION=$1

create_tables()
{
    /usr/share/zentyal/sql-table add remoteservices_passwd_report /usr/share/zentyal/sqllog/remoteservices_passwd_report.sql
    /usr/share/zentyal/sql-table add remoteservices_passwd_users /usr/share/zentyal/sqllog/remoteservices_passwd_users.sql
    /usr/share/zentyal/sql-table add remoteservices_passwd_users_report /usr/share/zentyal/sqllog/remoteservices_passwd_users_report.sql
}

# Create DB tables if required
create_tables

if [ -n "$VERSION" ]; then
    /usr/share/zentyal/ebox-reload-bundle
fi

if [ ! -e /var/lib/zentyal/tmp/upgrade-from-CC ]; then
    invoke-rc.d zentyal remoteservices restart
fi

exit 0
