HOST=localhost
PORT=6380
PASS=`cat /var/lib/ebox/conf/redis.passwd`

KEY=$1
VALUE=$2

case $# in
    1)
        COMMAND="get $KEY"
        ;;
    2)
        COMMAND="set $KEY $VALUE"
        ;;
    default)
        echo "Usage: $0 key [value]"
        echo "Gets the value of the key or sets it if a value is specified"
        exit 1
        ;;
esac

(echo "auth $PASS"; sleep 1.5; echo "$COMMAND") | nc $HOST $PORT
