#!/bin/bash

db_name=$1
db_user="ebox"

create_db()
{
    echo "Creating the $db_name database"
    su postgres -c "createdb $db_name"
    su postgres -c "createuser -R -S -D $db_user"
    su postgres -c "psql -d $db_name -c \"GRANT ALL ON DATABASE $db_name TO $db_user\""

    /usr/share/zentyal/sql-table add admin /usr/share/zentyal/sqllog/admin.sql
    /usr/share/zentyal/sql-table add consolidation /usr/share/zentyal/sqllog/consolidation.sql

    /usr/share/zentyal/sql-table add events /usr/share/zentyal/sqllog/events.sql

    /usr/share/zentyal/sql-table-with-time-period add events_accummulated /usr/share/zentyal/sqllog/events_accummulated.sql
    /usr/share/zentyal/sql-table add events_report /usr/share/zentyal/sqllog/events_report.sql

    /usr/share/zentyal/sql-table add report_consolidation /usr/share/zentyal/sqllog/report_consolidation.sql

    /usr/share/zentyal/sql-table add sysinfo_disk_usage /usr/share/zentyal/sqllog/sysinfo_disk_usage.sql
    /usr/share/zentyal/sql-table add sysinfo_disk_usage_report /usr/share/zentyal/sqllog/sysinfo_disk_usage_report.sql
    /usr/share/zentyal/sql-table add events /usr/share/zentyal/sqllog/events.sql
    /usr/share/zentyal/sql-table add backup_slices /usr/share/zentyal/sqllog/backup_slices.sql
}

# Check if we can connect to postgresql now
su postgres -c 'psql -Alt' >& /dev/null || exit 1

su postgres -c 'psql -Alt' | grep -q "^$db_name|" && db_exists=1 || db_exists=0 || true
if [ $db_exists -eq 0 ]; then
    create_db
fi

touch /var/lib/zentyal/.db-created
