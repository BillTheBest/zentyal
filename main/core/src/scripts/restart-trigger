# This scripts restarts apache, logs and events modules

use warnings;
use strict;

use EBox;
use EBox::Util::Init;
use Error qw(:try);

EBox::init();

foreach my $modName (qw(apache logs events)) {
    EBox::Util::Init::moduleRestart($modName);
}

1;
