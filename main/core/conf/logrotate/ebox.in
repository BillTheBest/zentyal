@LOCALSTATEDIR@/log/zentyal/error.log @LOCALSTATEDIR@/log/zentyal/access.log {
        rotate 7
        size 10M
        compress
        nocreate
        missingok
        delaycompress
        notifempty
        postrotate
                if [ -x /usr/sbin/invoke-rc.d ]; then \
                        invoke-rc.d zentyal apache restart > /dev/null; \
                else \
                        /etc/init.d/zentyal apache restart > /dev/null; \
                fi; \
        endscript
}

@LOCALSTATEDIR@/log/zentyal/zentyal.log {
        rotate 7
        size 10M
        compress
        nocreate
        missingok
        notifempty
}
