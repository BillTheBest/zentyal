# This script removes the module configuration stored in our backend
# (normal and state) and purge SQL log tables if exists

use EBox;
use EBox::Config;
use EBox::Global;
use EBox::Util::SQL;
use Error qw(:try);

my ($modname) = @ARGV;

EBox::init();

cleanModuleConf($modname);
EBox::Util::SQL::dropModuleTables($modname);

exit 0;

sub cleanModuleConf
{
    my ($module) = @_;

    my $globalConf = "/ebox/modules/global/modules/$module";
    my @moduleConfs = ("/ebox/modules/$module", "/ebox/state/$module");

    my $global = EBox::Global->instance();
    $global->delete_dir($globalConf);
    foreach my $moduleConf (@moduleConfs) {
        $global->{redis}->delete_dir($moduleConf);
    }
}
