#!/bin/bash

case "$1" in
	remove)
        # openvpn changes network interfaces so we must restart network module to propagate the changes
        invoke-rc.d zentyal network restart

        dpkg-trigger --no-await zentyal-core
        ;;
    purge)
        /usr/share/zentyal/clean-conf openvpn

        /usr/share/zentyal/drop-tables openvpn
esac

exit 0
