#!/bin/bash

#DEBHELPER#

case "$1" in
    configure)
        # Migrate data if needed
        /usr/share/zentyal-core/ebox-migrate /usr/share/ebox-ebackup/migration/

        #create log tables
        /usr/share/zentyal-core/ebox-sql-table add ebackup_storage_usage /usr/share/zentyal-core/sqllog/ebackup_storage_usage.sql
        /usr/share/zentyal-core/ebox-sql-table add ebackup_storage_usage_report /usr/share/zentyal-core/sqllog/ebackup_storage_usage_report.sql

        # restart module
        invoke-rc.d zentyal ebackup restart

        dpkg-trigger --no-await zentyal-core
    ;;
esac

exit 0
