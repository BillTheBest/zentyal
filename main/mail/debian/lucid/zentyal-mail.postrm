#!/bin/bash

case "$1" in
	remove)
        dpkg-trigger --no-await zentyal-core
        ;;

    purge)
        # Purge configuration
        /usr/share/zentyal/clean-conf mail || true

        /usr/share/zentyal/sql-table drop mail_message || true
        /usr/share/zentyal/sql-table drop mail_message_report || true
        ;;
esac

