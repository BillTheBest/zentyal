<%args>
	$user => 'ebox'
        @extraUsers => ()
</%args>

# sudoers file for ebox


# Allow httpd user to execute all commands
<% $user %>  ALL = NOPASSWD:ALL
% if (@extraUsers) {
# extra users granted permission by eBox
%   foreach my $extraUser (@extraUsers) {
<% $extraUser %>  ALL = NOPASSWD:ALL
%   }
% }
