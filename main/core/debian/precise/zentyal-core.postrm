#!/bin/bash

set -e

#DEBHELPER#

case "$1" in
    purge)
        # postgresql and logs
        db_name="eboxlogs"
        db_user="ebox"
        # FIXME: fix this for mysql
        #su postgres -c "dropdb $db_name"
        #su postgres -c "dropuser $db_user"

        # delete apache certificates
        rm -f /var/lib/zentyal/conf/ssl.crt/ebox.cert /var/lib/zentyal/conf/ssl.key/ebox.key \
            /var/lib/zentyal/conf/ssl.pem/ebox.pem

        # delete logs
        rm -rf /var/log/zentyal

        # delete ebox user
        deluser --remove-home ebox
    ;;
esac

exit 0
