use warnings;
use strict;

use EBox;
use EBox::Global;
use Error qw(:try);

EBox::init();
$SIG{PIPE} = 'IGNORE';

print "Importing old quota config\n";

my $users = EBox::Global->modInstance('users');

exit unless defined($users);
exit unless $users->isEnabled();

my @output;
try {
    @output = @{ EBox::Sudo::root('repquota /home') };
} otherwise {
    @output = @{ EBox::Sudo::root('repquota /') };
};


foreach my $line (@output) {
    my ($user, $quota) = $line =~ m/^([^ ]+)\s+--\s+\d+\s+(\d+)/;
    if (defined($user) and defined($quota)) {
        my $userInfo;
        try {
            $userInfo = $users->userInfo($user);
        } otherwise {};
        next unless ($userInfo);

        # Update quota for the user
        $userInfo->{quota} = $quota;
        $users->_modifyUserQuota($userInfo);
    }
}


