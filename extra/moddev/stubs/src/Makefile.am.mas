<%args>
    $perlDir => undef
    @perlData => ()
    @subDirs  => ()
</%args>
## Process this file with automake to produce Makefile.in
% if (@subDirs) {
SUBDIRS = <% "@subDirs" %>
% }

% if (defined $perlDir) {
perldir = @PERLPATH@/<% $perlDir %>
% }

% if (@perlData) {
nobase_perl_DATA = <% "@perlData" %>

DISTCLEANFILES =

EXTRA_DIST = $(nobase_perl_DATA)
% }

MAINTAINERCLEANFILES = Makefile.in
