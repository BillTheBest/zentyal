#!/usr/bin/perl
use strict;
use warnings;
use EBox;
use EBox::Config;
use EBox::Global;

my ($module) = @ARGV;
$module or die "You must supply the name of a Zentyal module";

EBox::init();

my $global = EBox::Global->instance();
my $mod = $global->modInstance($module);

my $globalConf = "/ebox/modules/global/modules/$module";
my $moduleConf = "/ebox/modules/$module";

$global->delete_dir($globalConf);
$mod->delete_dir($moduleConf);

1;
