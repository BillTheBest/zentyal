<?xml version="1.0" encoding="UTF-8"?>
<image>
    <name>baseimage-{$dist}-mini</name>
    <desc>Ubuntu Hardy</desc>

    <memory>128</memory>

    <size>500</size>

    <install method="debootstrap">
        <dist>{$dist}</dist>
        <command>/usr/sbin/debootstrap --exclude=ubuntu-minimal,libc6-i686 --no-resolve-deps</command>
    </install>

    <pre-install>
        <script>write-{$dist}-sources.sh</script>
    </pre-install>

    <packages>
        <package>openssh-server</package>
    </packages>

</image>
