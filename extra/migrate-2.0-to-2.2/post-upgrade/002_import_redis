use warnings;
use strict;

use EBox;
use EBox::Config::Redis;

EBox::init();

my $redis = new EBox::Config::Redis();
my $dumpfile = "/var/lib/ebox/redis_dump.yaml";

# empty db
$redis->delete_dir('');

print "Importing old configuration...\n";

# import dump from 2.0
$redis->import_dir_from_yaml($dumpfile);

