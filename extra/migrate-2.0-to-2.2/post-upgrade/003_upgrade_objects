use warnings;
use strict;

use EBox;
use EBox::Global;

EBox::init();

print "Upgrading objects to new schema...\n";

my $objects = EBox::Global->modInstance('objects');

foreach my $obj (@{$objects->objects()}) {
    my $objId = $obj->{id};
    my $objModel = $objects->{'objectModel'}->row($objId);
    foreach my $member (@{$objModel->subModel('members')->ids()}) {
        $objects->set_string("objectTable/keys/$objId/members/keys/$member/address_selected", 'ipaddr');
    }
}

$objects->save();

